<nav id="nav-Top-Container">
    <span id="nav-Top">
        <a href="/" class="app-name"><strong>CutUrls</strong></a>
        <a class="nav-a" id="about" href="/about">About</a>
        <a class="nav-a" id="github" href="https://github.com/itsarnob/url-shortener" target="_">GitHub</a>
        <a class="nav-a" id="report" href="/report">Report</a>
        <span id="loginContainer">
            <label id="switch" class="switch">
                <input type="checkbox" onchange="changeTheme()" id="slider" <%- themeChecked %>>
                <span class="slider round"></span>
            </label>
            <%- user %>
        </span>
    </span>
</nav>
    <script>
        const changeTheme = () => {
            const isChecked = document.getElementById("slider").checked;
            if (isChecked) {
                document.body.style = `
                    --bg:#252321;
                    --nav-Top-bg:#191919;
                    --theme-switch-bg:#363636;
                    --nav-a-hover-color:#5cd705;
                    --font-color:#b3b3b3;
                    --nav-a-underline-color:#868686;
                    --btn-gradient: linear-gradient(336deg, rgba(78,188,0,1) 0%, rgba(44,127,234,1) 100%);
                    --urlInput-bg: #413f3e;
                    --urlInput-shadow: rgb(0 0 0 / 20%);
                    --urlInput-focus-shadow:rgb(0 0 0 / 32%);
                    --more-options-btn-clr: #625e5a;
                    --more-options-btn-hover-clr: #94908c;
                    --tooltip-bg:#171514;
                    --tooltip-color:#bdb6b3;
                    --input-blocked-bg: #2b2a29;
                    --input-blocked-txt-clr: #a1a1a1;
                    
                    `
                document.cookie = "theme=dark;";
            } else {
                document.body.style = `
                    --bg:#e9eaec;
                    --nav-Top-bg:#f3f3f3;
                    --theme-switch-bg:#363636;
                    --nav-a-hover-color:#2c7fea;
                    --font-color:#545454;
                    --nav-a-underline-color:#bdbdbd;
                    --btn-gradient: linear-gradient(336deg, rgba(44,127,234,1) 0%, rgba(177 67 255) 100%);
                    --urlInput-bg: #f6f9fff9;
                    --urlInput-shadow: rgb(0 0 0 / 5%);
                    --urlInput-focus-shadow:rgb(0 0 0 / 10%);
                    --more-options-btn-clr: #a7a9ad;
                    --more-options-btn-hover-clr: #64676d;
                    --tooltip-bg:#d1d3d6;
                    --tooltip-color:#2e2e2f;
                    --input-blocked-bg: #d7dade;
                    --input-blocked-txt-clr: #4b4b4b;
                    `

                document.cookie = "theme=light;";
            }
        }
    </script>